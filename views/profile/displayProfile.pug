extends ../layout

include ../mixins/_productCard

block content

    .site-width

        .edit-profile-form

            .profile-data
                h1 #{user.first_name} #{user.last_name}
                    a.edit-profile(href="#0") (edit my profile)

                ul
                    li 
                        a(href=`mailto:${user.email}`) #{user.email}
                    li
                        a(href=`tel:${user.phone_number}`) #{user.phone_number}

            .profile-pic
                img(src=`https://res.cloudinary.com/dpkuo9jjc/image/upload/v1522413167/${user.profile_photo}.jpg`, alt=`Your Profile Photo`)

        ul.product-list
            each product in products
                +productCard(product)