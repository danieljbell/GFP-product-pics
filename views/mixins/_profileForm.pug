mixin profileForm(user = {})
  form(action=`${currentPath}` method="POST" class="edit-profile-form" enctype="multipart/form-data")
    .profile-data
      .form-group
        label(for="first_name") First Name
        input(type="text" name="first_name" id="first_name" value=user.first_name)
      .form-group
        label(for="last_name") Last Name
        input(type="text" name="last_name" id="last_name")
      .form-group
        label(for="email") Email Address
        input(type="email" name="email" id="email")
      .form-group
        label(for="phone_number") Phone Number
        input(type="phone_number" name="phone_number" id="phone_number") 
      .form-group
        label(for="password") Password
        input(type="password" name="password" id="password")
      .form-group
        label(for="password-confirm") Confirm Password
        input(type="password" name="password-confirm" id="password-confirm")
    .profile-pic
      input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
      if user.photo
        img(src='//fillmurray.com/300/300', alt=`${user.first_name} ${user.last_name}`)
    input(type="submit" value="Register")